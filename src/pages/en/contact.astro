---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/en/ContactSection_fr.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Nous Contacter | ${SITE.title}`;
const metaDescription =
  "Sudden enlightenment";
const ogTitle = "Nous Contacter | ScrewFast";
---

<MainLayout
  title={pageTitle}
  lang="en"
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://sudden-enlightenment.vercel.app/en/",
    url: "https://sudden-enlightenment.vercel.app/en/",
    name: "Sudden enlightenment",
    description: "Sudden enlightenment",
    isPartOf: {
      "@type": "WebSite",
      url: "https://sudden-enlightenment.vercel.app/en",
      name: "Sudden enlightenment",
      description: "Sudden enlightenment",
    },
    inLanguage: "en",
  }}
>
  <ContactSection />
</MainLayout>
